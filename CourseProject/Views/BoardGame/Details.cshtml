@model BoardGameViewModel

@{
    ViewData["Title"] = "Деталі гри";
}

<div class="container mt-3">
    <h2>@Model.Name</h2>
    <p><strong>Опис:</strong> @Model.Description</p>
    <p><strong>Ціна:</strong> @Model.Price.ToString("C")</p>

    @if (Model.ImagePaths != null && Model.ImagePaths.Count > 0)
    {
        <div>
            <h4>Зображення</h4>
            @foreach (var imagePath in Model.ImagePaths)
            {
                <img src="@Url.Content($"~/images/gameImages/{imagePath}")" alt="Game Image" style="max-height: 200px; margin-right: 10px;">
            }
        </div>
    }

    <a asp-action="Index" class="btn btn-secondary">Назад до списку ігор</a>
    
    @if (User.IsInRole("менеджер"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редагувати</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Видалити</a>
    }
</div>